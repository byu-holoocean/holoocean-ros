{
    "name": "SurfaceVessel",
    "package_name": "Ocean",
    "world": "PierHarbor",
    "main_agent": "auv0",
    "ticks_per_sec": 30,
    "frames_per_sec": 30,
    "agents": [
        {
        "agent_name": "auv0",
        "agent_type": "SurfaceVessel",
        "sensors": [
            {
                "sensor_type": "DynamicsSensor",
                "configuration": {
                    "UseCOM": true,
                    "UseRPY": false 
                },
                "ros_publish": true

            },
            {
                "sensor_type": "DVLSensor",
                "ros_publish": true,
                "configuration":{
                    "VelSigma": [0.1,0.1,0.1,0.1]
                }
            },
            {
                "sensor_type": "IMUSensor",
                "ros_publish": true,
                "socket": "COM",
                "configuration":{
                    "AccelSigma": [0.01,0.01,0.01],
                    "AngVelSigma": [0.01,0.01,0.01],
                    "ReturnBias": true
                }
            },
            {
                "sensor_type": "GPSSensor",
                "ros_publish": true,
                "tick_every": 30,
                "configuration":{
                    "Sigma": [0.001,0.001,0.001],
                    "Depth": 0.5,
                    "DepthSigma": 0.05
                }
            },
            {
                "sensor_type": "RotationSensor",
                "ros_publish": true
            },
            {
                "sensor_type": "RangeFinderSensor",
                "ros_publish": true,
                "configuration": {
                    "LaserMaxDistance": 50,
                    "LaserCount": 20,
                    "LaserDebug": false
                }
            },
            {
                "sensor_type": "RaycastSemanticLidar",
                "socket": "CameraSocket",
                "configuration": { 
                    "Channels": 128,
                    "Range": 200, 
                    "PointsPerSecond": 131072, 
                    "RotationFrequency": 10.0, 
                    "UpperFovLimit": 22.5,
                    "LowerFovLimit": -22.5,
                    "DropOffGenRate": 0.0,
                    "DropOffIntensityLimit": 0.0,
                    "ShowDebugPoints": true,
                    "NoiseStdDev": 0.0
                },
                "Hz": 10.0,
                "location": [0,0,0],
                "ros_publish": true
            },
            {
                "sensor_type": "DepthSensor",
                "ros_publish": true,
                "configuration":{
                    "Sigma": 0.03
                }
            }
        ],
        "control_scheme": 0,  
        "location": [259,-740,0],
        "rotation": [0,0,0]
        }
    ]
}