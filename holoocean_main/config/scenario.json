{
    "name": "torpedo_dynamics",
    "package_name": "Ocean",
    "world": "OpenWater",
    "main_agent": "auv0",
    "ticks_per_sec": 30,
    "draw_arrow": true,
    "show_viewport": true,
    "agents": [
        {
        "agent_name": "auv0",
        "agent_type": "TorpedoAUV",
        "sensors": [
            {
                "sensor_type": "DynamicsSensor",
                "configuration": {
                    "UseCOM": true,
                    "UseRPY": false 
                },
                "ros_publish": true

            },
            {
                "sensor_type": "DVLSensor",
                "ros_publish": true,
                "configuration":{
                    "VelSigma": [0.1,0.1,0.1,0.1]
                }
            },
            {
                "sensor_type": "IMUSensor",
                "ros_publish": true,
                "socket": "COM",
                "configuration":{
                    "AccelSigma": [0.01,0.01,0.01],
                    "AngVelSigma": [0.01,0.01,0.01],
                    "ReturnBias": true
                }
            },
            {
                "sensor_type": "GPSSensor",
                "ros_publish": true,
                "tick_every": 30,
                "configuration":{
                    "Sigma": [0.001,0.001,0.001],
                    "Depth": 0.5,
                    "DepthSigma": 0.05
                }
            },
            {
                "sensor_type": "LocationSensor",
                "ros_publish": true
            },
            {
                "sensor_type": "RotationSensor",
                "ros_publish": true
            },
            {
                "sensor_type": "DepthSensor",
                "ros_publish": true,
                "configuration":{
                    "Sigma": 0.03
                }
            },
            {
                "sensor_type": "RotationSensor",
                "ros_publish": true
            }
        ],
        "control_scheme": 1,  
        "location": [0,0,-10],
        "rotation": [0,0,0],
        "publish_commands": true
            
        }
    ]
}